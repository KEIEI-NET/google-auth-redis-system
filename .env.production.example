# Production Environment Variables Template
# Copy this file to .env.production and fill in your actual values

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
FRONTEND_PORT=80
FRONTEND_SSL_PORT=443

# Database Configuration
POSTGRES_DB=google_auth_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:your_secure_postgres_password_here@localhost:5432/google_auth_db?schema=public
DATABASE_PASSWORD=your_secure_postgres_password_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password_here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback

# JWT Configuration (Generate secure random strings)
JWT_SECRET=your_minimum_32_character_secure_random_string_here
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your_minimum_32_character_secure_session_secret_here
SESSION_EXPIRES_IN=24h

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Monitoring
GRAFANA_PASSWORD=your_secure_grafana_password_here
GRAFANA_URL=https://monitoring.yourdomain.com

# SSL/TLS Configuration (for production nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# React App Configuration
REACT_APP_API_URL=https://yourdomain.com
REACT_APP_GOOGLE_CLIENT_ID=your_google_client_id_here